// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // DO NOT add 'url' here in Prisma 7 - it goes in prisma.config.ts
}

enum UserRole {
  COUNSELOR
  SENIOR_COUNSELOR
  ADMIN
}

enum RiskLevel {
  MODERATE
  HIGH
  CRITICAL
}

enum CaseStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  RESOLVED
}

model Counselor {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  fullName      String   @map("full_name")
  role          UserRole @default(COUNSELOR)
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  assignedCases Case[]
  sessionNotes  SessionNote[]

  @@map("counselors")
}

model Case {
  id                String     @id @default(uuid())
  studentId         String     @map("student_id")
  studentName       String     @map("student_name")
  studentEmail      String     @map("student_email")
  riskLevel         RiskLevel  @map("risk_level")
  riskScore         Float      @map("risk_score")
  status            CaseStatus @default(PENDING)
  
  triggerType       String     @map("trigger_type")
  emotionSnapshot   Json       @map("emotion_snapshot")
  assessmentData    Json?      @map("assessment_data")
  
  assignedToId      String?    @map("assigned_to_id")
  assignedTo        Counselor? @relation(fields: [assignedToId], references: [id])
  assignedAt        DateTime?  @map("assigned_at")
  
  escalatedAt       DateTime   @default(now()) @map("escalated_at")
  resolvedAt        DateTime?  @map("resolved_at")
  
  sessionNotes      SessionNote[]

  @@index([status, riskLevel, escalatedAt])
  @@index([studentId])
  @@index([assignedToId])
  @@map("cases")
}

model SessionNote {
  id            String    @id @default(uuid())
  caseId        String    @map("case_id")
  case          Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  
  counselorId   String    @map("counselor_id")
  counselor     Counselor @relation(fields: [counselorId], references: [id])
  
  noteContent   String    @map("note_content") @db.Text
  actionTaken   String?   @map("action_taken")
  followUpDate  DateTime? @map("follow_up_date")
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([caseId])
  @@index([counselorId])
  @@map("session_notes")
}
